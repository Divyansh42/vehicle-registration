<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:src="@drawable/car_background"
        android:alpha="0.15"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/info_icon"
            android:layout_marginLeft="367dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/tata"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="18dp">

                    <ImageView
                        android:id="@+id/rc_validity_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/green_tick"
                        android:layout_marginTop="2dp"
                        />

                    <TextView
                        android:id="@+id/rc_validity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RC Valid"
                        android:textColor="#689F38"
                        android:layout_marginLeft="12dp"
                        android:textSize="18sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/insurance_validity_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/orange_tick"
                        android:layout_marginTop="2dp"
                        />

                    <TextView
                        android:id="@+id/insurance_validity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Insurance Expiring Soon"
                        android:textColor="#F57C00"
                        android:layout_marginLeft="12dp"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp">

                    <ImageView
                        android:id="@+id/pollution_validity_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/red_icon"
                        android:layout_marginTop="2dp"
                        />

                    <TextView
                        android:id="@+id/pollution_validity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pollution Expired"
                        android:textColor="#F44336"
                        android:layout_marginLeft="12dp"
                        android:textSize="17sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/owner" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Owner :"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/registered" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Registered No. :"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/car" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Model No. :"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tool" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Chassis No. :"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tool" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Engine No. :"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Date Of Registration :"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/fuel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:text="Fuel Type :"
                        android:textColor="#000000"
                        android:textSize="17sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/owner_name"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Name Of Owner"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/registered_no"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="UP 41 H 5400"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/model_no"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="TATA Manza XYZ"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/chassis_no"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="MAXK243XXX"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/engine_no"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="JS882E89J"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/date_of_registration"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="22nd March, 2013"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/fuel_type"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Petrol/LPG"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/more_details"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAlignment="viewEnd"
                    android:textColor="#3F51B5"
                    android:text="+ More Car Details"/>

                <View
                    android:layout_width="112dp"
                    android:layout_height="1dp"
                    android:layout_gravity="end"
                    android:layout_below="@+id/more_details"
                    android:background="#283593"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:background="#3F51B5"
            android:text="Generate Duplicate RC"
            android:textAllCaps="false"
            android:textColor="#FAFAFA"
            android:textSize="15sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#3F51B5"
            android:text="Renew Documents"
            android:textAllCaps="false"
            android:textColor="#FAFAFA"
            android:textSize="15sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="#3F51B5"
            android:text="Stolen? File it Here"
            android:textAllCaps="false"
            android:textColor="#FAFAFA"
            android:textSize="15sp" />


    </LinearLayout>
</FrameLayout>

